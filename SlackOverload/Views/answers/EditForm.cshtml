@model answers
@{
    ViewData["Title"] = "EditForm";
}

<h1>Edit Your Answer</h1>
<br />

<br />
<form method="post" action="/answers/edit/@Model.id">
    <table>
        <tbody>

            <tr>
                <td>Answer Details: </td>
                <td><textarea type="text" name="details" cols="75" rows="5" required>@Model.details</textarea></td>
            </tr>
        </tbody>
    </table>
    <input type="hidden" name="id" value="@Model.id" />
    <input type="hidden" name="qid" value="@Model.qid" />
    <input type="hidden" name="upvotes" value="@Model.upvotes" />
    <input type="submit" />
</form>

