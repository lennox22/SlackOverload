<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SlackOverload</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light  border-bottom box-shadow mb-3" style="background-color:#ff7626">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="font: bolder">Tick Tock Over-Clock</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item" style="font: bolder">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Search</a>
                        </li>

                        <li class="nav-item" style="font: bolder">
                            <a class="nav-link text-dark" asp-area="" asp-controller="questions" asp-action="index">Questions</a>
                        </li>
                        <li class="nav-item" style="font: bolder">
                            <a class="nav-link text-dark" asp-area="" asp-controller="answers" asp-action="index">Answers</a>
                        </li>
                        <li class="nav-item" style="font: bolder">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LoginForm">Login</a>
                        </li>
                        @if (DAL.CurrentUser != null)
                        {
                            <li class="nav-item" style="font: bolder">
                                <span class="nav-link text-white" style="font-size:larger; font:bolder">Welcome @DAL.CurrentUser</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="background-color:#ff7626">
        <div class="container" style="color: #212529">
            &copy; 2021 - SlackOverload - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #212529">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
